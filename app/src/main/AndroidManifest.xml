<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VistaQuickDonation">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key"/>

        <service
            android:name=".notification.service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="true"/>

        <activity android:name=".ui.screens.interactiveMap.InteractiveMapActivity"/>
        <activity android:name=".ui.HomePageActivity"/>
        <activity android:name=".ui.screens.charity.CharityProfileActivity"/>
        <activity android:name=".ui.screens.pickUpAtHome.PickUpAtHomeActivity"/>
        <activity android:name=".ui.screens.scheduledonation.ScheduleDonationActivity"/>
        <activity android:name=".ui.screens.quickDonation.QuickDonationActivity"/>
        <activity android:name=".ui.screens.register.RegisterActivity"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.VistaQuickDonation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.screens.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.VistaQuickDonation">

        </activity>

    </application>
</manifest>
